{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "PublicRead",
                "WebsiteConfiguration": {
                    "IndexDocument": "index.html",
                    "ErrorDocument": "error.html"
                }
            },
            "DeletionPolicy": "Retain"
        },
        "BucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "PolicyDocument": {
                    "Id": "weather",
					"Version": "2008-10-17",
					"Id": "PolicyForCloudFrontPrivateContent",
					"Statement": [
						{
							"Sid": "1",
							"Effect": "Allow",
							"Principal": {
								"AWS": "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity E16DHRBSD204CQ"
							},
							"Action": "s3:GetObject",
							"Resource": "arn:aws:s3:::gkweather/*"
						}
					]                                        
				},
									
                "Bucket": {
                    "Ref": "S3Bucket"
                }
            }
        }
    },
    "Outputs": {
        "WebsiteURL": {
            "Value": {
                "Fn::GetAtt": [
                    "S3Bucket",
                    "WebsiteURL"
                ]
            },
            "Description": "gkweather.s3.amazonaws.com/"
        },
        "S3BucketSecureURL": {
            "Value": {
                "Fn::Join": [
                    "",
                    [
                        "https://",
                        {
                            "Fn::GetAtt": [
                                "S3Bucket",
                                "DomainName"
                            ]
                        }
                    ]
                ]
            },
            "Description": "gkweather"
        }
    }
}